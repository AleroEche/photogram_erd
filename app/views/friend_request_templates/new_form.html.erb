<h1>
  Add a new friend request
</h1>


<hr>

<form action="/create_friend_request" method="post">

  <div class="form-group">
    <label for="receipient_id">
      Receipient
    </label>

    <%= select_tag(:receipient_id, options_from_collection_for_select(User.all, :id, :user_name, @friend_request.receipient_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <input type="text" id="sender_id" name="sender_id" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create friend request
  </button>
</form>

<hr>

<a href="/friend_requests">
  Go back
</a>
